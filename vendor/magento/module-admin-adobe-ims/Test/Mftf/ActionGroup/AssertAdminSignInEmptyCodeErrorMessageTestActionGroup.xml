<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertAdminSignInEmptyCodeErrorMessageTestActionGroup">
        <annotations>
            <description>Check for Error Message on Admin Adobe IMS Sign in.</description>
        </annotations>

        <seeElement selector="{{AdminSignInErrorMessageSection.generalHeadline}}"
                    stepKey="assertAdminSignErrorMessageGeneralHeadline"/>

        <seeElement selector="{{AdminSignInErrorMessageSection.generalMessage}}"
                    stepKey="assertAdminSignErrorMessageGeneralMessage"/>
    </actionGroup>
</actionGroups>
